{
    "compilerOptions": {
        "target": "ESNext",
        "lib": ["ESNext", "DOM"],
        "module": "ESNext",
        "jsx": "react",
        "outDir": "dist",
        "moduleResolution": "node",
        "declaration": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["src", "*.config.ts"],
    "exclude": ["node_modules", "dist"]
}
